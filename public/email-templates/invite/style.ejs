body {
  background-color: #F6F6F6;
  font-family: 'Poppins', sans-serif;

}

main {
  width: 600px;
  margin: 20px auto;
  background-color: white;
  padding: 0 20px 20px 20px;
}

nav {
  background: white;
  text-align: center;
  padding: 15px;
}

nav img {
  height: 35px;
  margin: 0 auto;
}

h2 {
  text-transform: uppercase;
  font-size: 18px;
  letter-spacing: 2px;
  font-weight: 900;
  margin: 0;
  line-height: 1.4;
}

h3 {
  text-transform: uppercase;
  font-size: 18px;
  letter-spacing: 2px;
  font-weight: 900;
  margin: 0;
  line-height: 20px;
  text-align: center;
  color: #FF5964;

}

h4 {
  font-family: 'Old Standard TT', serif;
  font-style: italic;
  margin: 0;
  line-height: 1.4;
}

.event-index-each {
  background-color: #f6f6f6;
  margin: 10px 0;
  width: 100%;
  padding: 10px;
  height: 85px;
}

.event-index-date {
  text-align: center;
  width: 65px;
  height: 60px;
  margin-right: 10px;
  background-color: white;
  padding: 10px;
  padding-top: 15px;
  float: left;
}

.event-index-date-day {
  font-size: 36px;
  font-weight: 900;
}

.event-index-date-month {
  font-weight: 900;
  font-size: 14px;
  font-family: 'Old Standard TT', serif;
  font-style: italic;
}

.event-index-info {
  padding: 20px;
  background-color: white;
  height: 45px;
  margin-right: 10px;
  display: inline-block;
  width: calc(100% - 155px);
}